<?xml version="1.0" encoding="utf-8"?>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="#F7F7F7">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nologo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"

            android:layout_marginTop="20dp"
            android:text="Estado @ctivo "
            android:textColor="#FA855B1D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Registrar Empleado"
            android:textAlignment="center"
            android:textColor="#c2ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:text="Datos Empleado"
            android:textColor="#c2ffffff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtcampoIDU"
            android:layout_width="353dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/border_text"
            android:backgroundTint="#40C19350"
            android:ems="10"
            android:hint="Número de cedula"
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColorHint="#63FFFFFF"></EditText>

        <EditText
            android:id="@+id/txtcampoNombre"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_text"
            android:backgroundTint="#40C19350"
            android:hint="Nombre"
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColorHint="#63FFFFFF"></EditText>

        <EditText
            android:id="@+id/txtcampoApellido"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/border_text"
            android:backgroundTint="#40C19350"
            android:hint="Apellido"
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColorHint="#63FFFFFF"></EditText>

        <EditText
            android:id="@+id/txtcampotelefono"
            android:layout_width="353dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/border_text"
            android:backgroundTint="#40C19350"
            android:ems="10"
            android:hint="Teléfono"
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColorHint="#63FFFFFF"></EditText>

        <TextView
            android:id="@+id/textView51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="Datos de Acceso"
            android:textColor="#c2ffffff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtcampoNusuario"
            android:layout_width="353dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/border_text"
            android:backgroundTint="#40C19350"
            android:ems="10"
            android:hint="Dígite su Usuario"
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColorHint="#63FFFFFF"></EditText>

        <EditText
            android:id="@+id/txtCampoPWD"
            android:layout_width="353dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/border_text"
            android:backgroundTint="#40C19350"
            android:ems="10"
            android:hint="Dígite su clave"
            android:inputType="textPassword"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColorHint="#63FFFFFF"></EditText>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="286dp"
            android:layout_height="48dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FA855B1D"
            android:text="Registrar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="wrap_content"
                android:layout_height="37dp"

                android:layout_marginLeft="250dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#578A6328"
                android:text="atras" />

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>