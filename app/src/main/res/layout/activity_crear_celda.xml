<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nologo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"

                android:layout_marginTop="20dp"
                android:text="Estado @ctivo "
                android:textColor="#FA855B1D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="140dp"
                android:text="Crear Celda"
                android:textColor="#c2ffffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:text="Datos Celda"
                android:textColor="#c2ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campoIdCelda"
                android:layout_width="353dp"
                android:layout_height="47dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Número de Celda"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColorHint="#63FFFFFF" />

            <EditText
                android:id="@+id/campoUbicacionCelda"
                android:layout_width="353dp"
                android:layout_height="47dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Ubicación de celda"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColorHint="#63FFFFFF" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="286dp"
                android:layout_height="48dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#FA855B1D"
                android:text="Guardar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegresar"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="120dp"
                    android:backgroundTint="#578A6328"
                    android:text="Atras" />
            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
