<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nologo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"

                android:layout_marginTop="20dp"
                android:text="Estado @ctivo "
                android:textColor="#FA855B1D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"

                android:layout_marginTop="60dp"
                android:text="__________________________________________________"
                android:textColor="#FA855B1D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="5dp"
                android:text="Buscar Cliente"
                android:textColor="#c2ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/campoIdCedula"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Número Cédula"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-45dp"
                android:backgroundTint="#FA855B1D"
                android:text="Buscar" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"

                android:layout_marginTop="-5dp"
                android:text="__________________________________________________"
                android:textColor="#FA855B1D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="16dp"
                android:text="Datos Cliente"
                android:textColor="#c2ffffff"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Editar Cliente"
                android:textColor="#c2ffffff"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/campoIdNombre"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/campoIdApellido"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="207dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Apellido"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/campoIdTelefono"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Teléfono"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/campoIdCorreo"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="207dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="209dp"
                android:layout_height="31dp"
                android:layout_marginTop="16dp"
                android:text="Datos del Vehículo"
                android:textColor="#c2ffffff"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/campoIdMarca"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Marca"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/campoIdModelo"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="207dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Modelo"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/campoIdPlaca"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Placa"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/campoIdColor"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="207dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#40C19350"
                android:ems="10"
                android:hint="Color"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FA855B1D"
                android:text="Actualizar" />

            <Button
                android:id="@+id/btnEliminar2"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="207dp"
                android:layout_marginTop="-48dp"
                android:backgroundTint="#FA855B1D"
                android:text="Eliminar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegresar"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#578A6328"
                    android:text="Atras" />

                <EditText
                    android:id="@+id/campoIdCliente"
                    android:layout_width="348dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#40C19350"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Id cliente"
                    android:inputType="none"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>